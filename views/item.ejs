<!-- views/item.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rare Soccer Jerseys - Item Detail</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header.ejs') %>
    
    
    <!-- Item Detail Page Content -->
    <main>
        <section class="item-detail">
            <div class="item-image">
                <img src="/images/<%= item.image %>" alt="<%= item.name %>">
            </div>
            <div class="item-info">
                <h2><%= item.title || item.name %></h2>
                <p><strong>Condition:</strong> <%= item.condition %></p>
                <p><strong>Price:</strong> $<%= item.price %></p>
                
                <!-- Display seller's name conditionally -->
                <% if (item.seller) { %>
                    <p><strong>Seller:</strong> <%= item.seller.firstName %> <%= item.seller.lastName %></p>
                <% } else { %>
                    <p><strong>Seller:</strong> Unknown</p>
                <% } %>

                <p><strong>Offers Received:</strong> <%= item.offersReceived %></p>
                <p><strong>Details:</strong> <%= item.details %></p>
            </div>
        </section>
    </main>
    
    <!-- Footer -->
    <%- include('./partials/footer.ejs') %>
</body>
</html>
